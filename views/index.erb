<div class = "col1">
  <div class="blogposts">
    <h1>Recent Blog Posts</h1>
    <ul>
      <% @posts.each do |post| %>
         <li><a href="<%= post.url %>">
           <%= post.title.capitalize.gsub("Post", "Post ") %>
           <span class="postdate"><%= post.date %> </span></a></li>
      <% end %>
    </ul>

    <div class="downbutton">
      <a href="#"><img src="/downarrow.png" alt="scrolldown"/></a>
    </div>
    
  </div>

  <% @posts.each do |post| %>
    <%= post.content %>
  <% end %>

  <p>next</p>
  <p>back</p>
</div>
